---
	import Layout from '../layouts/Layout.astro';
	import Header from '../components/Header.vue'
	import Features from '../components/Features.vue'
	import TopCarousel from '../components/TopCarousel.vue'
	import Latest from '../components/Latest.vue'
	import SmallNtall from '../components/SmallNtall.vue';
	import Featured from '../components/Featured.vue'
	import Popular from '../components/Popular.vue'
	import Captioned from '../components/Captioned.vue'
	import Categories from '../components/Categories.vue'
	import Feedbacks from '../components/Feedbacks.vue'
	import Instagram from '../components/Instagram.vue'
	import Footer from '../components/Footer.vue'

---

<!DOCTYPE html>
<html>
<head>
	<title>Hello</title>

  	<meta charset="UTF-8">
    <link rel="icon" href="/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">  
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

</head>
<body>
	<Layout title="Welcome to Astro.">
		<Header  />
		<TopCarousel client:load />
		<Features />
		<Latest  />
		<SmallNtall />
		<Featured client:load />
		<Popular />
		<Captioned client:load />
		<Categories />
		<Feedbacks />
		<Instagram />
		<Footer />
	</Layout>

 	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script type="text/javascript">
  
    function slideLeft(id){
      document.getElementById(id).scrollBy({
        left: -document.getElementById('firstLatest').offsetWidth, // Adjust the scroll amount as needed
        behavior: 'smooth' // Optionally, enable smooth scrolling
      }); 
    }

    function slideRight(id){
      document.getElementById(id).scrollBy({
        left: document.getElementById('firstLatest').offsetWidth, // Adjust the scroll amount as needed
        behavior: 'smooth' // Optionally, enable smooth scrolling
      });
    }

    </script>



</body>
</html>

